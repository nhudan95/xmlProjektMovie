<?xml version="1.0"?>
<map:sitemap 
	xmlns:map="http://apache.org/cocoon/sitemap/1.0" 
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform" 
	xmlns:fn="http://www.w3.org/2005/xpath-functio">
	<map:pipelines>
		<map:pipeline>
			<!-- Durchmustern eines XML-Dokuments -->
			<!-- Einfache statistische Auswertungen -->
			<map:match pattern="topFive.html">
				<map:generate src="xml/movie_XML.xml"/>
				<map:transform type="xslt-saxon" src="xslt/topFive.xsl"/>
				<map:serialize type="html"/>
			</map:match>
			<map:match pattern="allMovies.html">
				<map:generate src="xml/movie_XML.xml"/>
				<map:transform type="xslt-saxon" src="xslt/allMovies.xsl">
					<map:parameter name="use-request-parameters" value="true"/>
				</map:transform>
				<map:serialize type="html"/>
			</map:match>
			<map:match pattern="movie_search_all.html">
				<map:generate src="xml/movie_XML.xml"/>
				<map:transform type="xslt-saxon" src="xslt/movie_search_all.xsl">
					<map:parameter name="use-request-parameters" value="true"/>
				</map:transform>
				<map:serialize type="html"/>
			</map:match>
			<map:match pattern="infomovie.html">
				<map:generate src="xml/movie_XML.xml"/>
				<map:transform type="xslt-saxon" src="xslt/movie_search_all.xsl">
					<map:parameter name="use-request-parameters" value="true"/>
				</map:transform>
				<map:serialize type="html"/>
			</map:match>
			<!-- Abfrage der zugehoerigen CSS-Dokumente -->
			<map:match pattern="css/**">
				<map:read src="css/{1}"/>
			</map:match>
			<!-- Abfrage der Bilder -->
			<map:match pattern="img/**">
				<map:read src="img/{1}"/>
			</map:match>
		</map:pipeline>
	</map:pipelines>
</map:sitemap>
